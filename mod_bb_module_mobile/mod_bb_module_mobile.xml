   <files>
		<filename>mod_bb_module_mobile.xml</filename>
		<filename module = "mod_bb_module_mobile">mod_bb_module_mobile.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>mod_bb_module_mobile.png</filename>
		<folder>css</folder>
		<filename>css/style.css</filename>
		<filename>css/index.html</filename>
		<folder>images</folder>
